<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ListRoom</servlet-name>
        <servlet-class>controller.ListRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminHome</servlet-name>
        <servlet-class>controller.AdminHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListRoomForAd</servlet-name>
        <servlet-class>controller.ListRoomForAd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeControl</servlet-name>
        <servlet-class>controller.HomeControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewRoom</servlet-name>
        <servlet-class>controller.AddNewRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListRoomAdControl</servlet-name>
        <servlet-class>controller.ListRoomAdControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListRoom</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminHome</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListRoomForAd</servlet-name>
        <url-pattern>/roomAd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeControl</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewRoom</servlet-name>
        <url-pattern>/addroom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListRoomAdControl</servlet-name>
        <url-pattern>/listroomad</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
